
@{
    ViewBag.Title = "Rol Ata";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model AspnetUsers

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Rol Atama Sayfası
            </header>
            <form action="/Admin/RolAta" method="post">
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th><i class="icon-bullhorn"></i> Kullanıcı Adı :</th>
                            <th class="hidden-phone"><i class="icon-question-sign"></i> Rol Seç :</th>
                            <th><i class="icon-bookmark"></i> Onayla</th>


                        </tr>
                    </thead>

                    <tbody>


                        <tr>
                            
                            <td>
                                <input type="hidden" name="kullaniciAdi"   value="@Model.UserName" />
                            &nbsp; <label>@Model.UserName </label> </td>
                            <td class="hidden-phone">
                                <select  name="rolAdi">
                                    @foreach (AspnetRoles item in ViewBag.roller)
                                    {
                                        <option value="@item.RoleName">@item.RoleName</option>
                                    }
                                </select>
                            </td>

                            <td>

                                <input class="btn btn-primary" type="submit" name="name" value="Rolü, Üyeye Ekle" />
                            </td>

                        </tr>



                    </tbody>
                </table>
            </form>
        </section>
    </div>
</div>

