
@{
    ViewBag.Title = "Üye Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Yeni Uye Ekle
               
                <p style="color:red; font-weight:bold;"> @ViewBag.sorun</p>
            </header>

            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" action="/Admin/UyeEkle">
                        <div class="form-group ">
                            <label for="firstname" class="control-label col-lg-2">İsim :</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="firstname" name="adi" type="text" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-2">Soyisim :</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="lastname" name="soyadi" type="text" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="username" class="control-label col-lg-2">Kullanıcı Adı :</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="username" name="kullaniciAdi" type="text" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Parola :</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="password" name="parola" type="text" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="confirm_password" class="control-label col-lg-2">Parola Onayı :</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="confirm_password" name="parola2" type="text" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="email" class="control-label col-lg-2">Email :</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="email" name="email" type="email" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Gizli Soru :</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="password" name="gizliSoru" type="text" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="password" class="control-label col-lg-2">Gizli Cevap :</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="password" name="gizliCevap" type="text" />
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-2">
                                <input class="btn btn-compose" type="submit" name="name" value="Kayıt Et" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

