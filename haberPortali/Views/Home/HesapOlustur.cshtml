
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="/Content/Admin/img/favicon.png">
    <title>Hesap Oluştur</title>
    <!-- Bootstrap core CSS -->
    <link href="/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/Admin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/Content/Admin/css/style.css" rel="stylesheet">
    <link href="/Content/Admin/css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-body">
    <div class="container">
        <form class="form-signin" action="/Home/HesapOlustur" method="post">
            <h2 class="form-signin-heading">Hemen hesap oluştur</h2>
            <div class="login-wrap">
                <p>Bilgilerinizi Giriniz</p>
                @if (ViewBag.mesaj != null)
    {
                <p style="color:red;">@ViewBag.mesaj</p>
}

                <input type="text" class="form-control" name="adi" placeholder="İsim" autofocus>
                <input type="text" class="form-control" name="soyadi" placeholder="Soyisim" autofocus>

                <input type="text" class="form-control" name="email" placeholder="Email" autofocus>
                <input type="text" class="form-control" name="gizliSoru" placeholder="Gizli Soru(Lütfen not ediniz*)" autofocus>
                <input type="text" class="form-control" name="gizliCevap" placeholder="Gizli Cevap(Lütfen not ediniz*)" autofocus>

                Doğum Tarihiniz: &nbsp;
                <input type="date" class="form-control" name="dogumTarihi" value="" />
                <div class="radios">
                    <label class="label_radio col-lg-6 col-sm-6" for="radio-01">
                        <input  name="erkekMi" id="radio-01" value="1" type="radio" checked /> Bay
                    </label>
                    <label class="label_radio col-lg-6 col-sm-6" for="radio-02">
                        <input name="erkekMi" id="radio-02" value="0" type="radio" /> Bayan
                    </label>
                </div>
                <p> Hesap bilgilerinizi giriniz</p>
                <input type="text" name="kullaniciAdi" class="form-control" placeholder="Kullanıcı Adınız" autofocus>
                <input type="password" name="parola"  class="form-control" placeholder="Parola">
                <input type="password" name="parola2" class="form-control" placeholder="Parola Tekrarı">
                <label class="checkbox">
                    <input name="sozlesmeOlayi" type="checkbox" value="true">Servis ve saklılık sözleşmesini kabul ediyorum
                </label>
                <input class="btn btn-send" type="submit" name="name" value="Hesap oluştur" />
                <div class="registration">
                    Hesabım var.
                    <a class="" href="/Home/Giris">
                        Giriş Yap
                    </a>
                </div>
            </div>
        </form>
    </div>

</body>
</html>
